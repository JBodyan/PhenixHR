@model IEnumerable<CandidateViewModel>

@{
    ViewData["Title"] = "Candidates";
    var error = ViewBag.Error;
}

<h1>Candidates</h1>
@Html.ActionLink("Add new candidate", "AddCandidate")
@if (error != null)
{
    <p>
        Error: @error.Message
    </p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DesiredSalary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CareerObjective)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.About)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PersonalInfo.FirstName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DesiredSalary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CareerObjective)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.About)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonalInfo.FirstName)
                    </td>
                    <td>
                        @Html.ActionLink("Transfer To Employee", "TransferToEmployee", new {  id = item.Id }) |
                        @Html.ActionLink("Details", "CandidateDetails", new { id = item.Id })
                        @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
