@model PositionViewModel
@{
    ViewData["Title"] = "AddPosition";
}

<div class="modal-content">
    <div class="modal-header">
        <h4>Add position</h4>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <div class="container">
            <form asp-action="AddPosition">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="OfficeIdentifier" value="@ViewBag.OfficeId" hidden class="form-control" />
                    <input asp-for="DepartmentIdentifier" value="@ViewBag.DepartmentId" hidden class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}