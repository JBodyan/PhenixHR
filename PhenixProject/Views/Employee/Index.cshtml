@model IEnumerable<PhenixProject.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
    var error = ViewBag.Error;
}

<h1>Employees</h1>
@if (error != null)
{
    <p>
        Error: @error.Message
    </p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            @foreach (var item in Model)
            {
                <div class="card" style="width: 18rem;">
                    @if (item.PersonalInfo.Photo == null)
                    {
                        <img class="card-img-top" src="~/Photo/empty.png" alt="Photo">
                    }
                    else
                    {
                        <img class="card-img-top" src="@item.PersonalInfo.Photo" alt="Photo">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.PersonalInfo.FirstName @item.PersonalInfo.LastName</h5>
                        <p class="card-text">Department: @item.Department</p>
                        <p class="card-text">Position: @item.Position</p>
                        @Html.ActionLink("About", "EmployeeDetails", new {id = item.Id}, new {@class = "btn btn-primary"})
                    </div>
                </div>
            }
        </div>
    </div>
}
