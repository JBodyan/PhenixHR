@model X.PagedList.IPagedList<PhenixProject.Data.AppUser>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "AllAdministrators";
}

<h1>All administrators</h1>
<div class="title-text">
@Html.ActionLink("Create new administrator", "RegisterAdministrator","Account")
</div>
<div asp-validation-summary="All" class="text-danger"></div>
@if (Model!=null)
{
    
    <div class="search-container">
        <input class="search" type="text">
        <div class="btn btn-primary"><i class="fas fa-search"></i></div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                       
                    @Html.ActionLink("Edit", "EditAdministrator", new { id = item.Id })
                    @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div>
        <div class="pagination-custom">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            <div class="pagination-custom-action">
                @Html.PagedListPager(Model, page => Url.Action("AllAdministrators", new {page}))
            </div>
        </div>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}