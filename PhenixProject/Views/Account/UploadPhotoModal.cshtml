@model UploadFileViewModel
@{
    ViewData["Title"] = "Upload photo";
}

<div class="modal-content">
    <div class="modal-header">
        <h4>Upload photo</h4>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <div class="container">
            <form asp-controller="Account" asp-action="UploadPhoto" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input hidden asp-for="UserId" name="UserId" value="@ViewBag.UserId" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="file" asp-for="File" name="File" value="Select file" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Upload" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}